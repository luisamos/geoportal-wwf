  #crearCapa.lbox
    .lbox--title Crear capa
    .grid
      .col--4 Nombre de capa:
      .col--8
        input(type="text", placeholder="", require)
      .col--4 Subir archivo:
      .col--8
        label.custom-file-upload(for='file-upload') Seleccionar archivo
        input#file-upload(type='file')

      .col--12
        .text-center
          br
          button.btn.btn--small Subir capa
          button.btn.btn--small.bg-gray(onclick="Fancybox.close()")  Cancelar

  #actualizarCapa.lbox
    .lbox--title Crear capa
    .grid
      .col--4 Nombre de capa:
      .col--8
        input(type="text", placeholder="", require)
      .col--4 Url:
      .col--8
        input(type="text", placeholder="", value="https://geoportal.wwf.org/geoserver/capa1	", require)

      .col--12
        .text-center
          br
          button.btn.btn--small Actualizar capa
