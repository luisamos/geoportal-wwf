  #crearUsuario.lbox
    .lbox--title Crear usuario
    form(action="post") 
      .grid
        .col--6 Usuario:
        .col--6
          input(type="text", name="usuario", placeholder="", required)
        .col--6 Persona:
        .col--6
          input(type="text", name="persona", placeholder="", required)
        .col--6 Estado:
        .col--6
          select(name="estado")
            option(value="activo") Activo
            option(value="inactivo") Inactivo
        .col--12
          .text-center
            br
            button.btn.btn--small Registrar Usuario
            button.btn.btn--small.bg-gray(onclick="Fancybox.close()")  Cancelar

  #actualizarUsuario.lbox
    .lbox--title Actualizar usuario
    form(action="post") 
      input(type="hidden", name="id", id="actualizar-id")
      .grid
        .col--6 Usuario:
        .col--6
          input(type="text", placeholder="", value="", required, id="actualizar-usuario")
        .col--6 Persona:
        .col--6
          input(type="text", placeholder="", value="", required, id="actualizar-persona")
        .col--6 Estado:
        .col--6
          select(name="estado", id="actualizar-estado")
            option(value="activo") Activo
            option(value="inactivo") Inactivo
        .col--12
          .text-center
            br
            button.btn.btn--small Actualizar Usuario
            button.btn.btn--small.bg-gray(onclick="Fancybox.close()") Cancelar

  #rolUsuario.lbox
    .lbox--title Asignar perfil
    .grid
      .col--6 Nombre de Usuario:
      .col--6
        input(type="text", placeholder="", require)
      .col--6 Perfil:
      .col--6
        select
          option perfil 1
          option perfil 2
          option perfil 3
      .col--12        
        .text-center
          br
          button.btn.btn--small Actualizar Usuario
          button.btn.btn--small.bg-gray(onclick="Fancybox.close()")  Cancelar
    